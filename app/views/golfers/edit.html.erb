<h1>Editing golfer</h1>

<% form_for(@golfer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :earnings %><br />
    <%= f.text_field :earnings %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @golfer %> |
<%= link_to 'Back', golfers_path %>
